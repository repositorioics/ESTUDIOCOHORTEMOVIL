<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout android:layout_width="200dp" android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageButton
        android:id="@+id/imgBtnImprimir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/printer64"
        android:background="@drawable/bg_button_print"
        android:layout_marginBottom="4dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="30dp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false" />

    <TextView
        android:id="@+id/txtvImprimir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgBtnImprimir"
        android:text="@string/label_imprimir"
        android:layout_alignRight="@+id/imgBtnImprimir"
        android:layout_marginRight="12dp" />

    <ImageButton
        android:id="@+id/imgBtnPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="14dp"
        android:layout_toRightOf="@+id/imgBtnImprimir"
        android:background="@null"
        android:src="@drawable/pdf64" />


    <TextView
        android:id="@+id/txtvPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtvImprimir"
        android:layout_below="@+id/imgBtnPdf"
        android:layout_marginLeft="16dp"
        android:text="@string/label_ver_pdf"
        android:layout_marginTop="4dp" />

</RelativeLayout>
</LinearLayout>